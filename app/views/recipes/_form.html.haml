= form_for(@recipe) do |f|
  - if @recipe.errors.any?
    #error_explanation
      %h2
        = pluralize(@recipe.errors.count, "error")
        prohibited this recipe from being saved:

      %ul
        - @recipe.errors.full_messages.each do |message|
          %li= message
      
  .field
    = f.label :name
    %br
    = f.text_field :name

  .field
    = f.label :preparation
    %br
    = f.text_area :preparation
  
  .actions
    = f.submit
