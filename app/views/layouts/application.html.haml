!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "#{app_name}"
    = csrf_meta_tags
    = stylesheet_link_tag 'application', media: 'all'
    /[if lt IE 9]
      = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js'

  %body
    .navbar.navbar-default.navbar-inverse.navbar-fixed-top
      .container
        %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to root_path, class: 'navbar-brand' do
          = image_tag('logo.png', class: 'img-responsive', width:'80px')
        .collapse.navbar-collapse.navbar-responsive-collapse
          - if user_signed_in?
            %ul.nav.navbar-nav.navbar-left
              %li= link_to 'My Recipes', recipes_path
              %li= link_to 'All Recipes', root_path
              %li= link_to 'New Recipe', new_recipe_path
            %ul.nav.navbar-nav.navbar-right
              - if user_signed_in?
                %li.navbar-text Welcome #{current_user.given_name} #{current_user.last_name}
                %li= link_to 'Edit Profile', edit_user_registration_path
                %li= link_to 'Logout', destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }
              - else
                %li= link_to 'Login', new_user_session_path
                %li= link_to 'Sign Up', new_user_registration_path
    .container
      .row
        .col-lg-12
          - flash.each do |key, value|
            .alert.alert-success
              %button.close{ data: { dismiss: 'alert' } } x
              %strong= value
          = yield
      %footer.footer
        %h4.text-center
          = image_tag('logo.png', class: 'img-responsive center-block', width:'150px')
          .glyphicon.glyphicon-copyright-mark 
          #{app_name} #{Date.today.year}
  = javascript_include_tag 'application'

